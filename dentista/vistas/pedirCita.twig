{% extends "base.twig" %}

{% block titulo %}Reservar Cita{% endblock %}

{% block contenido %}
    <div class="card">
        <h1>Reservar Cita</h1>

        <form action="" method="POST">
            <div class="form-group">
                <label for="servicio">Servicio Deseado</label>
                <select name="servicio" id="servicio" required>
                    <option value="" disabled selected>-- Selecciona --</option>
                    {% for servicio in servicios %}
                        <option value="{{ servicio.id_servicio }}">
                            {{ servicio.tipo }} ({{ servicio.precio }}â‚¬)
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="fecha">Fecha</label>
                <input type="date" id="fecha" name="fecha" required min="{{ 'now'|date('Y-m-d') }}">
            </div>

            <div class="form-group">
                <label for="hora">Hora (09:00 - 20:00)</label>
                <input type="time" id="hora" name="hora" required min="09:00" max="20:00">
            </div>

            <button type="submit" class="btn btn-blue">Confirmar Reserva</button>
        </form>

        <a href="/citas/cliente" class="footer-link">Cancelar y Volver</a>
    </div>
{% endblock %}
{% extends "base.twig" %}

{% block titulo %}Registro de Usuario{% endblock %}

{% block contenido %}
    <main class="card">
        <h1>Crear Cuenta</h1>

        <form action="/registro/guardar" method="POST">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" required>
            </div>

            <div class="form-group">
                <label for="apellido1">Primer Apellido</label>
                <input type="text" id="apellido1" name="apellido1" required>
            </div>

            <div class="form-group">
                <label for="apellido2">Segundo Apellido (Opcional)</label>
                <input type="text" id="apellido2" name="apellido2">
            </div>

            <div class="form-group">
                <label for="email">Correo Electrónico</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" required>
            </div>

            <input type="hidden" name="tipo_usuario" value="cliente">

            <button type="submit" class="btn btn-blue">Registrarse</button>
        </form>

        <a href="/login" class="footer-link">¿Ya tienes cuenta? Inicia sesión</a>
    </main>
{% endblock %}